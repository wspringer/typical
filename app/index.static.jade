extends layout.static.jade

block title
  |When

block main
  .main(ng-app="when" ng-controller="MainCtrl")
    .row
      h1 When
    .row
      .large-6.large-offset-3
        input(type="text" ng-model="moment")
    .row(ng-show="detected")
      .large-6.large-offset-3
        p {{detected.desc}}
    .row(ng-show="detected")
      .large-6.large-offset-3
        |{{detected.date.long()}}
    .row(ng-show="detected")
      .large-6.large-offset-3
        pre {{detected.ics}}
    .row(ng-show="detected")
      .large-6.large-offset-3
        a(href="{{detected.link}}") Download
